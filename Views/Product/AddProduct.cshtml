@model Veterinario3.Models.Product
@Styles.Render("~/Content/css")

<main class="container">
    @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <h2 class="titoloPagina fw-bold">AGGIUNGI PRODOTTO</h2>
    <div class="d-flex flex-column align-items-center">

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label fw-bold" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control formProduct" } })
        </div>


        <div class="form-group mb-3 d-flex align-items-center">
            <p class="fw-bold">Tipologia:</p>
            <div class="d-flex flex-column ms-2">
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.Tipologia, "Farmaci", new { @class = "form-check-input" })
                    @Html.Label("Farmaci", new { @class = "form-check-label" })
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.Tipologia, "Alimentazione", new { @class = "form-check-input" })
                    @Html.Label("Alimentazione", new { @class = "form-check-label" })
                </div>
            </div>
        </div>


        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Quantità, new { @class = "control-label fw-bold" })
            @Html.EditorFor(model => model.Quantità, new { htmlAttributes = new { @class = "form-control formProduct" } })
        </div>

        <div class="form-group mb-3">
            <label for="SelectedCompanyId" class="control-label fw-bold">Scegli la ditta fornitrice</label>
            @Html.DropDownList("SelectedCompanyId", (IEnumerable<SelectListItem>)ViewBag.CompanyOptions, "Seleziona Compagnia", new { @class = "form-control formProduct" })
        </div>

        <div class="form-group mb-3">
            <label for="UsageId" class="control-label fw-bold">Scegli l'utilizzo</label>
            @Html.DropDownList("UsageId", (IEnumerable<SelectListItem>)ViewBag.UsageOptions, "Seleziona Utilizzo", new { @class = "form-control formProduct" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Ricetta, new { @class = "form-check-label fw-bold" })
            @Html.CheckBoxFor(model => model.Ricetta, new { @class = "form-check-input" })
        </div>

        <input type="submit" value="Aggiungi Prodotto" class="btn btn-success" />
    </div>
}        
</main>
